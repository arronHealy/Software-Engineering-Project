%div#page-content
    %h1.text-center.mt-1 Wiki-Bloggers

    %div.row.justify-content-md-center
        %div.col-8
            %div.card.text-center.text-white.shadow.bg-light.rounded
                %div.row
                    %div.col-6
                        %div 
                            = link_to 'Sort By Newest Users', users_path(:sort => 'new')
                    %div.col-6
                        %div 
                            = link_to 'Sort By Oldest Users', users_path(:sort => 'old')

    - @users.each do |user|
        %div.row.justify-content-md-center
            %div.col-8.mt-2
                %div.card.text-center.shadow.mb-5.bg-white.rounded
                    %div.card-header.font-italic
                        Wiki-Blogger
                    %div.card-body
                        %h5.card-title 
                            = link_to user.email, user_path(user)
                        %p.card-text 
                            = get_gravatar user
                        = link_to 'View Profile', user_path(user), :class => 'btn btn-outline-primary'
                        - if session[:user_id] == user.id
                            = link_to 'Edit Profile', edit_user_path(user), :class => 'btn btn-outline-success'
                    %div.card-footer.text-muted
                        %small
                            Joined -
                        %small 
                            = user.created_at.strftime("%B %d, %Y")

