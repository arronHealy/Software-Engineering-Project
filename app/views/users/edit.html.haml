%div#page-content
    %h1.text-center.mt-1 Update Your Account

    %div.container
        %div.row.justify-content-center.mt-4
            %div.col-10
                = form_tag user_path(@user), :class => 'shadow p-3 mb-3 bg-dark rounded', :method => :put do

                    %div.form-group.row.mt-4
                        = label :user, :email, 'Email', :class => 'col-2 col-form-label text-light'
                        %div.col-10
                            = text_field :user, 'email', :class => 'form-control shadow rounded', :placeholder => 'Enter Email'

                    %br/

                    %div.form-group.row
                        = label :user, :password, 'Password', :class => 'col-2 col-form-label text-light'
                        %div.col-10
                            = password_field :user, 'password', :class => 'form-control shadow rounded', :placeholder => 'Enter Password'
                    
                    %br/
                    %br/

                    %div.form-group.row.justify-content-center.mt-4
                        = submit_tag 'Update Account', :class => 'btn btn-outline-light btn-lg'

                    %br/
                    %br/
                    %br/
        
        = link_to '[ Back to bloggers list ]', users_path

        %br/
        %br/